{
  "name": "solis-tagger",
  "description": "Sencillo etiquetador ID3 para canciones basado en tecnologías web.",
  "version": "0.2.2",
  "phase": "alpha",
  "versionSerial": 1,
  "buildDate": "6/10/2021",
  "main": "main.js",
  "scripts": {
    "build": "cd ./ui && ng build --outputPath='../ui'",
    "start": "electron . --inspect",
    "serve": "cd ./ui && ng serve --port=5000",
    "watch": "tsc --watch",
    "buildLinuxARMV7l": "electron-builder --linux --armv7l",
    "buildLinux64": "electron-builder --linux --x64",
    "buildLinuxia32": "electron-builder --linux --ia32",
    "buildWindowsx64": "electron-builder --windows --x64",
    "buildWindowsia32": "electron-builder --windows --ia32",
    "buildmacOS": "electron-builder --macos --x64"
  },
  "author": "Marcos Rodríguez <marcosylrg@gmail.com>",
  "dependencies": {
    "axios": "^0.22.0",
    "mmmagic": "^0.5.3",
    "nedb-promises": "^5.0.1",
    "node-id3": "^0.2.2",
    "string-similarity": "^4.0.4"
  },
  "devDependencies": {
    "@types/mmmagic": "^0.4.30",
    "@types/source-map-support": "^0.5.4",
    "@types/string-similarity": "^4.0.0",
    "electron": "^12.0.5",
    "electron-builder": "^22.10.5",
    "electron-rebuild": "^3.2.0",
    "source-map-support": "^0.5.19"
  },
  "build": {
    "productName": "Solis Tagger",
    "appId": "dev.moccha.tagger",
    "icon": "assets/icon.png",
    "asar": true,
    "directories": {
      "output": "../output"
    },
    "dmg": {
      "contents": [
        {
          "x": 131,
          "y": 210
        },
        {
          "x": 370,
          "y": 210,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "icon": "assets/icon.icns",
      "background": "assets/background.png"
    },
    "linux": {
      "target": [
        "deb",
        "rpm"
      ],
      "icon": "assets/icon.png"
    },
    "win": {
      "target": "NSIS",
      "icon": "assets/icon.ico"
    }
  }
}
